<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- IMDB theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarTheme" parent="AppTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CollapsingBar" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Style Text -->
    <style name="Text_Main_ColorMain_Item">
        <item name="android:textColor">@color/cv_colorTextMain</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Text_Sub_ColorSub_Item">
        <item name="android:textColor">@color/cv_colorSubtext</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <!-- Style Text for full view -->
    <style name="Text_Main_ColorMain_DetailsView">
        <item name="android:textColor">@color/cv_colorTextMain</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Text_Title_ColorMain_DetailsView">
        <item name="android:textColor">@color/cv_colorTextMain</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Text_Sub_ColorSub_DetailsView">
        <item name="android:textColor">@color/cv_colorSubtext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Text_Overview_ColorMain_DetailsView">
        <item name="android:textColor">@color/cv_colorTextMain</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

</resources>
